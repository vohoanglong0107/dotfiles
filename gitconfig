# vim:ft=gitconfig
[pull]
	rebase = true
[fetch]
	prune = true
[diff]
	colorMoved = zebra
  tool = difftastic
[difftool]
  prompt = false
[difftool "difftastic"]
  cmd = difft "$LOCAL" "$REMOTE"
[pager]
  difftool = true
[merge]
  tool = nvimdiff2
[core]
	editor  = nvim
  pager = delta
[delta]
  side-by-side = true
  line-numbers-minus-style = red
  line-numbers-plus-style = green
  # blend c1 c2 r: c1 * r + c2 * (1 - r)
  minus-emph-style = syntax "#BE708A" # blend red base 0.750
  minus-style = syntax "#674458" # blend red base 0.345
  plus-emph-style = syntax "#84B284" # blend green base 0.750
  plus-style = syntax "#4D6256" # blend green base 0.450
  syntax-theme = Catppuccin-mocha
[credential "https://github.com"]
	helper = 
	helper = !/usr/bin/gh auth git-credential
[credential "https://gist.github.com"]
	helper = 
	helper = !/usr/bin/gh auth git-credential
[include]
  # create a local gitconfig for sensitive info
  path = ~/.gitconfig.local
